{
    "name": "local-wiki",
    "version": "1.0.0",
    "description": "description",
    "main": "dist/js/main.js",
    "scripts": {
        "test": "jest",
        "compile": "npx tsc",
        "start": "npm run compile && electron .",
        "pack": "npm run compile && npx electron-builder --dir",
        "dist": "npm run compile && npx electron-builder"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "bootstrap": "^4.6.0",
        "highlight.js": "^10.6.0",
        "jsdifflib": "^1.1.0",
        "marked": "^1.2.9",
        "simplemde": "^1.11.2",
        "sortablejs": "^1.13.0"
    },
    "devDependencies": {
        "@types/highlightjs": "^10.1.0",
        "@types/jest": "^26.0.20",
        "@types/marked": "^1.2.2",
        "electron": "^11.2.3",
        "electron-builder": "^22.9.1",
        "jest": "^26.6.3",
        "ts-jest": "^26.5.0",
        "typescript": "^4.1.3"
    },
    "jest": {
        "verbose": true,
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "globals": {
            "ts-jest": {
                "tsconfig": "tsconfig.json"
            }
        },
        "testMatch": [
            "**/tests/**/*.test.ts"
        ]
    },
    "build": {
        "appId": "com.electron.TamDik.local-wiki",
        "asarUnpack": [
            "data/**/*"
        ],
        "directories": {
            "output": "build",
            "buildResources": "src"
        },
        "mac": {
            "category": "your.app.category.type"
        }
    }
}
