{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    // "declaration": true,
    "outDir": "./dist/js",
    "rootDir": "./src",
    // "downlevelIteration": true,
    "strict": true,
    // "moduleResolution": "node",
    "typeRoots": ["@types", "./node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
        "#/*": ["*"]
    }
  },
  "exclude": [
      "./tests",
      "./build"
  ]
}
